{
    "name": "vscode-xjs",
    "displayName": "XJS",
    "description": "XJS syntax highlighter for vscode",
    "keywords": [
        "xjs",
        "vscode",
        "extension",
        "highlighting"
    ],
    "version": "0.0.2",
    "author": "Bertrand Laporte",
    "license": "Apache-2.0",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "grammars": [
            {
                "scopeName": "template.xjs",
                "path": "./syntaxes/xjs.tmLanguage.json",
                "injectTo": [
                    "source.ts"
                ]
            }
        ]
    },
    "scripts": {
        "build": "rm -rf dist/ && tsc",
        "generate": "yarn run build && node dist/generator/ts-grammar",
        "test": "yarn run generate && yarn run mocha -r ts-node/register src/**/*.spec.ts --reporter dot"
    },
    "devDependencies": {
        "@types/node": "^10.12.18",
        "@types/mocha": "^5.2.3",
        "typescript": "^3.2.2",
        "mocha": "^5.2.0",
        "ts-node": "^7.0.1",
        "vscode-textmate": "^4.0.1",
        "tslib": "^1.9.3"
    }
}