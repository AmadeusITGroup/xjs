{
    "name": "xjs",
    "displayName": "XJS",
    "description": "XJS syntax highlighter for vscode",
    "keywords": [
        "xjs",
        "vscode",
        "extension",
        "highlighting"
    ],
    "version": "0.0.2",
    "author": "Bertrand Laporte",
    "license": "MIT",
    "engines": {
        "vscode": "^1.36.0"
    },
    "files": [
        "dist/*"
    ],
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "grammars": [
            {
                "scopeName": "template.xjs",
                "path": "./syntaxes/xjs.tmLanguage.json",
                "injectTo": [
                    "source.ts"
                ]
            }
        ]
    },
    "scripts": {
        "prepare": "yarn build",
        "build": "yarn build:grammar && yarn build:dist",
        "build:grammar": "ts-node src/tm-grammar/xjs-grammar",
        "build:dist": "rm -rf dist/ && tsc",
        "test": "yarn run mocha -r ts-node/register src/**/*.spec.ts --reporter dot"
    },
    "dependencies": {
        "vscode-textmate": "^4.2.2"
    },
    "devDependencies": {
        "@types/node": "^12.6.9",
        "@types/mocha": "^5.2.7",
        "typescript": "^3.5.3",
        "mocha": "^6.2.0",
        "ts-node": "^8.3.0",
        "tslib": "^1.10.0"
    }
}